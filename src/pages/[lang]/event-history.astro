---
import Layout from '@/layouts/Layout.astro';
import EventHistoryPageComponent from '@/components/dashboard_components/EventHistoryPage';

// Import all language translations for homePage
import { homePage as enHomePage } from '@/i18n/en/homePage';
import { homePage as esHomePage } from '@/i18n/es/homePage';
import { homePage as frHomePage } from '@/i18n/fr/homePage';
import { homePage as deHomePage } from '@/i18n/de/homePage';
import { homePage as itHomePage } from '@/i18n/it/homePage';
import { homePage as ptHomePage } from '@/i18n/pt/homePage';

// Import all language translations for eventHistoryPage
import { eventHistoryPage as enEventHistoryPage } from '@/i18n/en/eventHistoryPage';
import { eventHistoryPage as esEventHistoryPage } from '@/i18n/es/eventHistoryPage';
import { eventHistoryPage as frEventHistoryPage } from '@/i18n/fr/eventHistoryPage';
import { eventHistoryPage as deEventHistoryPage } from '@/i18n/de/eventHistoryPage';
import { eventHistoryPage as itEventHistoryPage } from '@/i18n/it/eventHistoryPage';
import { eventHistoryPage as ptEventHistoryPage } from '@/i18n/pt/eventHistoryPage';

export async function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'es' } },
    { params: { lang: 'fr' } },
    { params: { lang: 'de' } },
    { params: { lang: 'it' } },
    { params: { lang: 'pt' } },
  ];
}

const { lang } = Astro.params;

// Get homePage translations based on language
const getHomePageTranslations = (language: string) => {
  switch (language) {
    case 'es':
      return esHomePage;
    case 'fr':
      return frHomePage;
    case 'de':
      return deHomePage;
    case 'it':
      return itHomePage;
    case 'pt':
      return ptHomePage;
    case 'en':
    default:
      return enHomePage;
  }
};

// Get eventHistoryPage translations based on language
const getEventHistoryPageTranslations = (language: string) => {
  switch (language) {
    case 'es':
      return esEventHistoryPage;
    case 'fr':
      return frEventHistoryPage;
    case 'de':
      return deEventHistoryPage;
    case 'it':
      return itEventHistoryPage;
    case 'pt':
      return ptEventHistoryPage;
    case 'en':
    default:
      return enEventHistoryPage;
  }
};

const homePageTranslations = getHomePageTranslations(lang || 'en');
const eventHistoryPageTranslations = getEventHistoryPageTranslations(lang || 'en');
---

<Layout>
	<EventHistoryPageComponent 
		client:load 
		homePageTranslations={homePageTranslations}
		eventHistoryPageTranslations={eventHistoryPageTranslations}
	/>
</Layout>

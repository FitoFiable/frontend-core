---
import Layout from '@/layouts/Layout.astro';
import TransactionsPageComponent from '@/components/dashboard_components/TransactionsPage';

// Import all language translations for homePage
import { homePage as enHomePage } from '@/i18n/en/homePage';
import { homePage as esHomePage } from '@/i18n/es/homePage';
import { homePage as frHomePage } from '@/i18n/fr/homePage';
import { homePage as deHomePage } from '@/i18n/de/homePage';
import { homePage as itHomePage } from '@/i18n/it/homePage';
import { homePage as ptHomePage } from '@/i18n/pt/homePage';

// Import all language translations for transactionsPage
import { transactionsPage as enTransactionsPage } from '@/i18n/en/transactionsPage';
import { transactionsPage as esTransactionsPage } from '@/i18n/es/transactionsPage';
import { transactionsPage as frTransactionsPage } from '@/i18n/fr/transactionsPage';
import { transactionsPage as deTransactionsPage } from '@/i18n/de/transactionsPage';
import { transactionsPage as itTransactionsPage } from '@/i18n/it/transactionsPage';
import { transactionsPage as ptTransactionsPage } from '@/i18n/pt/transactionsPage';

export async function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'es' } },
    { params: { lang: 'fr' } },
    { params: { lang: 'de' } },
    { params: { lang: 'it' } },
    { params: { lang: 'pt' } },
  ];
}

const { lang } = Astro.params;

// Get homePage translations based on language
const getHomePageTranslations = (language: string) => {
  switch (language) {
    case 'es':
      return esHomePage;
    case 'fr':
      return frHomePage;
    case 'de':
      return deHomePage;
    case 'it':
      return itHomePage;
    case 'pt':
      return ptHomePage;
    case 'en':
    default:
      return enHomePage;
  }
};

// Get transactionsPage translations based on language
const getTransactionsPageTranslations = (language: string) => {
  switch (language) {
    case 'es':
      return esTransactionsPage;
    case 'fr':
      return frTransactionsPage;
    case 'de':
      return deTransactionsPage;
    case 'it':
      return itTransactionsPage;
    case 'pt':
      return ptTransactionsPage;
    case 'en':
    default:
      return enTransactionsPage;
  }
};

const homePageTranslations = getHomePageTranslations(lang || 'en');
const transactionsPageTranslations = getTransactionsPageTranslations(lang || 'en');
---

<Layout>
	<TransactionsPageComponent 
		client:load 
		homePageTranslations={homePageTranslations}
		transactionsPageTranslations={transactionsPageTranslations}
	/>
</Layout>
